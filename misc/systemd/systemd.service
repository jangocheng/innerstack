[Unit]
Description=sysinner-insoho
After=network.target

[Service]
Type=simple
LimitNOFILE=1024
ExecStart=/opt/sysinner/insoho/bin/insoho -log_dir=/opt/sysinner/insoho/var/log -minloglevel=1 -logtolevel=true
ExecReload=/bin/kill -HUP $MAINPID

TimeoutStartSec=0

KillMode=process

Restart=always
RestartSec=10

StartLimitBurst=3
StartLimitInterval=60s

[Install]
WantedBy=multi-user.target

