{
  "kind": "AppSpec",
  "meta": {
    "id": "hooto-press-x1",
    "version": "1"
  },
  "roles": [
    100,
    101
  ],
  "packages": [
    {
      "name": "hooto-press",
      "version": "0.2.4.dev",
      "release": "1",
      "dist": "el7",
      "arch": "x64"
    }
  ],
  "executors": [
    {
      "name": "main",
      "exec_start": "DAEMON=/home/action/apps/hooto-press/bin/hooto-press\nDAEMON_ARGS=\"-log_dir=/home/action/apps/hooto-press/var/log -minloglevel=1 -logtolevels=true\"\nNAME=hooto-press\n\nif pidof $NAME; then\n    exit 0\nfi\n\nmkdir -p /home/action/apps/hooto-press/\nrsync -av {{.inpack_prefix_hooto_press}}/* /home/action/apps/hooto-press/\n\n$DAEMON $DAEMON_ARGS \u003e\u003e /home/action/var/log/hooto-press.log 2\u003e\u00261 \u0026\n\nsleep 1\nexit 0",
      "exec_stop": "killall hooto-press",
      "plan": {
        "on_tick": 60
      }
    }
  ],
  "service_ports": [
    {
      "name": "http",
      "box_port": 9533
    }
  ],
  "configurator": {
    "name": "cfg/hooto-press",
    "fields": [
      {
        "name": "iam_service_url",
        "title": "IAM Service URL",
        "type": 1,
        "default": "{{.xcs_sysinner_iam_service_url}}"
      },
      {
        "name": "iam_service_url_frontend",
        "title": "IAM Service URL for Frontend",
        "type": 1,
        "default": "{{.xcs_sysinner_iam_service_url_frontend}}"
      }
    ]
  },
  "depends": [
    {
      "id": "sysinner-mysql-x1",
      "version": "1"
    }
  ]
}
