{
  "kind": "AppSpec",
  "meta": {
    "name": "hootopress",
    "version": "18",
    "created": 20170520070146428,
    "updated": 20170520070146428
  },
  "roles": [
    100
  ],
  "packages": [
    {
      "name": "hootopress",
      "version": "0.1.7.dev",
      "release": "18",
      "dist": "el7",
      "arch": "x64"
    }
  ],
  "executors": [
    {
      "name": "htpress",
      "exec_start": "DAEMON=/home/action/apps/hootopress/bin/hootopress\nDAEMON_ARGS=\"-log_dir=/home/action/apps/hootopress/var/log -minloglevel=1 -logtolevels=true\"\nNAME=hootopress\n\nif pidof $NAME; then\n    exit 0\nfi\n\nmkdir -p /home/action/apps/hootopress/\nrsync -av {{.lpm_prefix_hootopress}}/* /home/action/apps/hootopress/\n\n$DAEMON $DAEMON_ARGS \u003e\u003e /home/action/var/log/hootopress.log 2\u003e\u00261 \u0026\n\nsleep 1\nexit 0",
      "exec_stop": "killall hootopress",
      "plan": {
        "on_tick": 60
      }
    }
  ],
  "service_ports": [
    {
      "name": "http",
      "box_port": 9533
    }
  ],
  "configurator": {
    "name": "cfg/hootopress",
    "fields": [
      {
        "name": "iam_service_url",
        "title": "IAM Service URL",
        "type": 1
      },
      {
        "name": "iam_service_url_frontend",
        "title": "IAM Service URL for Frontend",
        "type": 1
      },
      {
        "name": "bound_mysql",
        "title": "Bound App",
        "type": 10,
        "default": "cfg/mysql"
      }
    ]
  }
}